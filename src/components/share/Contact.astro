---
interface Props {
  icon: string;
  title: string;
}

const { icon, title } = Astro.props;
import { Icon } from 'astro-icon/components';
---

<div class="flex items-center">
  <div class="shadow-sm relative before:absolute before:-z-9 before:bg-gradient-to-br before:from-turquoise-200 before:to-white-50 before:h-full before:w-full before:blur-[2px] mr-4">
    <div class="bg-white p-1 relative">
      <Icon name={ icon } size={24}/>
    </div>
  </div>
  <div class="text-sm">
    <p class="text-xs font-semibold text-turquoise-600">{ title.toUpperCase() }</p>
    <slot />
  </div>
</div>