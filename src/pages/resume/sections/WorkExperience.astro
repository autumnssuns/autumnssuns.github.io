---
import Section from '../components/Section.astro'
import type { WorkList } from '../types'
type Props = {
	title?: string
	experience: WorkList
}
const { title = 'Skills', experience } = Astro.props
---

<Section title={title} class='w-full items-center'>
	{
		experience?.map((job) => (
			<div class='w-full'>
				<div class='flex flex-col-reverse items-baseline gap-2 md:grid md:grid-cols-[3fr_1fr]'>
					<div class='whitespace-pre-wrap font-bold'>{job.title}</div>
					<div class='text-right text-sm'>{job.duration}</div>
				</div>
				<div>
					<div>{job.company}</div>
					<div class='font-bold italic text-[#7D2884]'>{job.summary}</div>
					<ul class='list-disc pl-8'>
						{job.details?.map((detail) => (
							<li>{detail}</li>
						))}
					</ul>
				</div>
			</div>
		))
	}
</Section>
