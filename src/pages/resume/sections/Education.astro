---
import Section from '../components/Section.astro'
import type { EducationList, SkillList } from '../types'
type Props = {
	title?: string
	degrees: EducationList
}
const { title = 'Skills', degrees } = Astro.props
---

<Section title={title} class='w-full items-center'>
	{
		degrees.map((degree) => (
			<div class='w-full'>
				<div class='flex flex-col-reverse gap-2 md:grid md:grid-cols-[4fr_1fr]'>
					<div class='whitespace-pre-wrap font-bold'>{degree.title}</div>
					<div class='text-right'>{degree.duration}</div>
				</div>
				<div>
					<div>{degree.provider}</div>
					<ul class='list-disc pl-8'>
						{degree.details.map((detail) => (
							<li>{detail}</li>
						))}
					</ul>
				</div>
			</div>
		))
	}
</Section>
