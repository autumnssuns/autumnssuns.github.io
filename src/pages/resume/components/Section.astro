---
import { twMerge } from 'tailwind-merge'
type Props = {
	title: string
	class?: string
}
const { title, class: className = '' } = Astro.props

const label = title?.toUpperCase()
---

<section class={twMerge('flex flex-col gap-2', className)}>
	<div class='title inline-flex w-full flex-col items-start justify-between border-b-2'>
		<div class='text-2xl font-bold'>
			{label}
		</div>
	</div>
	<slot />
</section>

<style>
	.title {
		border-color: var(--color-primary);
		color: var(--color-primary);
	}
</style>
